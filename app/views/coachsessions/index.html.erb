<% @coachsessions.each do |session| %>
  <div class="card bg-dark text-white">
    <%if session.main_photo.attached?%>
      <div class="card-img"><%= cl_image_tag session.main_photo.key, height: 300, width: 400, crop: :fill %></div>
    <% else %>
      <%= image_tag "calis_1.jpeg", class: "card-img" %>
    <% end %>
  <div class="card-img-overlay">
    <h5 class="card-title"><%=session.session_name%></h5>
    <p class="card-text"><%=session.description%></p>
    <p class="card-text"><%=session.price_per_day%></p>
  </div>
</div>
<% end %>

<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
